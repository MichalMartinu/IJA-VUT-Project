<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ija-blockdiagrammaker" default="compile.module.ija-blockdiagrammaker">
  <dirname property="module.ija-blockdiagrammaker.basedir" file="${ant.file.module_ija-blockdiagrammaker}"/>
  
  <property name="module.jdk.home.ija-blockdiagrammaker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ija-blockdiagrammaker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ija-blockdiagrammaker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ija-blockdiagrammaker" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="ija-blockdiagrammaker.output.dir" value="${module.ija-blockdiagrammaker.basedir}/../out/production/IJA-BlockDiagramMaker"/>
  <property name="ija-blockdiagrammaker.testoutput.dir" value="${module.ija-blockdiagrammaker.basedir}/../out/test/IJA-BlockDiagramMaker"/>
  
  <path id="ija-blockdiagrammaker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ija-blockdiagrammaker.module.production.classpath">
    <path refid="${module.jdk.classpath.ija-blockdiagrammaker}"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/junit-4.12.jar"/>
  </path>
  
  <path id="ija-blockdiagrammaker.runtime.production.module.classpath">
    <pathelement location="${ija-blockdiagrammaker.output.dir}"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/junit-4.12.jar"/>
  </path>
  
  <path id="ija-blockdiagrammaker.module.classpath">
    <path refid="${module.jdk.classpath.ija-blockdiagrammaker}"/>
    <pathelement location="${ija-blockdiagrammaker.output.dir}"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/junit-4.12.jar"/>
  </path>
  
  <path id="ija-blockdiagrammaker.runtime.module.classpath">
    <pathelement location="${ija-blockdiagrammaker.testoutput.dir}"/>
    <pathelement location="${ija-blockdiagrammaker.output.dir}"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/IJA-BlockDiagramMaker/lib/junit-4.12.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.ija-blockdiagrammaker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ija-blockdiagrammaker">
    <patternset refid="excluded.from.module.ija-blockdiagrammaker"/>
  </patternset>
  
  <path id="ija-blockdiagrammaker.module.sourcepath">
    <dirset dir="${module.ija-blockdiagrammaker.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ija-blockdiagrammaker" depends="compile.module.ija-blockdiagrammaker.production,compile.module.ija-blockdiagrammaker.tests" description="Compile module IJA-BlockDiagramMaker"/>
  
  <target name="compile.module.ija-blockdiagrammaker.production" depends="register.custom.compilers" description="Compile module IJA-BlockDiagramMaker; production classes">
    <mkdir dir="${ija-blockdiagrammaker.output.dir}"/>
    <javac2 destdir="${ija-blockdiagrammaker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ija-blockdiagrammaker}/javac">
      <compilerarg line="${compiler.args.ija-blockdiagrammaker}"/>
      <bootclasspath refid="ija-blockdiagrammaker.module.bootclasspath"/>
      <classpath refid="ija-blockdiagrammaker.module.production.classpath"/>
      <src refid="ija-blockdiagrammaker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ija-blockdiagrammaker"/>
    </javac2>
    
    <copy todir="${ija-blockdiagrammaker.output.dir}">
      <fileset dir="${module.ija-blockdiagrammaker.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ija-blockdiagrammaker.tests" depends="register.custom.compilers,compile.module.ija-blockdiagrammaker.production" description="compile module IJA-BlockDiagramMaker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ija-blockdiagrammaker" description="cleanup module">
    <delete dir="${ija-blockdiagrammaker.output.dir}"/>
    <delete dir="${ija-blockdiagrammaker.testoutput.dir}"/>
  </target>
</project>